  <%= form_for(@kid) do |f| %>
  <div class="form-group">
    <%= f.label :first_Name %>
    <%= f.text_field :first_name, class: "form-control" %>
    <%= f.label :last_Name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :gender %>
    <%= f.select :gender, options_for_select([['Male'],['Female']]), {}, {class: "custom-select ml-3"} %>
  </div>
  
  <div class="form-inline">
    <%= f.label :Birthdate %>
    <%= f.date_select :birthdate, {:start_year => 2004, :end_year => 2017, :prompt => [day: 'Select Day', month: 'Sellect Month', year: 'Select Year'], :order => [:day, :month, :year]}, class: "custom-select ml-3" %>
  </div>
  
  <div class="form-inline">
    <%= f.label :Last_Grade_Completed, class: "mt-3" %>
    <%= f.select :last_grade_id, options_for_select([['Pre-k', 0],
	['Pre-K', 1],
	['4K', 2],
	['5K', 3],
	['1st', 4],
	['2nd', 5],
	['3rd', 6],
	['4th', 7],
	['5th', 8],
	['5th', 9],
	['6th', 10]]),{}, {class: "custom-select ml-3 mt-3"}  %>
  </div>

  <div class="form group ">
    <label class="custom-control custom-checkbox">
      <%= f.check_box :church_member, class: "custom-control-input" %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Regular Attendee</span>
    </label>
    <%= f.text_field :invited_by, class: "form-control" %>
    <small class="form-text text-muted">If you were invited by a member of Brushy Creek please give thier name.</small>
  </div>
  
  <div class="form-group">
    <%= f.label :buddy_request %>
    <%= f.text_field :buddy_request, class: "form-control" %>
  </div>

  <div class="form-inline">
    <%= f.label :tshirt_size_id, class: "mt-3" %>
    <%= f.select :last_grade_id, options_for_select([['Pre-k', 0],
	['Pre-K', 1],
	['4K', 2],
	['5K', 3],
	['1st', 4],
	['2nd', 5],
	['3rd', 6],
	['4th', 7],
	['5th', 8],
	['5th', 9],
	['6th', 10]]),{}, {class: "custom-select ml-3 mt-3"}  %>
  </div>
  
  <label class="custom-control custom-checkbox">
    <%= f.check_box :can_photograph, class: "custom-control-input" %>
    <span class="custom-control-indicator"></span>
    <span class="custom-control-description">Can be photographed</span>
  </label>
  <small class="form-text text-muted">this box</small>
  
  <div class="form-group has-danger">
    <label class="custom-control custom-checkbox">
      <%= f.check_box :allergies, class: "custom-control-input" %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Allergies</span>
    </label>
    <%= f.text_area :allergies_notes, class: "form-control"%>
  </div>

    <div class="form-group">
    <label class="custom-control custom-checkbox">
      <%= f.check_box :midical_issues, class: "custom-control-input" %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Other Medical Issues</span>
    </label>
    <%= f.text_area :medical_issues_notes, class: "form-control"%>
  </div>
  
  <%# Add the rest of the kid info before putting the parent and pick upinfo %>
  <label class="custom-control custom-checkbox">
    <%= f.check_box :highlight, class: "custom-control-input" %>
    <span class="custom-control-indicator"></span>
    <span class="custom-control-description">Highlight</span>
  </label>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Register",  class: "btn btn-primary"%>
  <% end %>
