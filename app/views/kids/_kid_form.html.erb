<div class="kids-form">
  <div class="w-100 bg-dark text-light p-3 mb-2">
    <h4 class="m-0">Child Info</h4>
  </div>
  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :first_name, 'First name' %> 
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :last_name, 'Last name' %> 
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="d-block my-3">
    <div class="custom-control custom-radio">
      <%= f.radio_button :gender, :male, class: "custom-control-input" %>
      <%= f.label :gender, "Male", value: "male", class: "custom-control-label" %>
    </div>
    <div class="custom-control custom-radio">
      <%= f.radio_button :gender, :female, class: "custom-control-input" %>
      <%= f.label :gender, "Female", value: "female", class: "custom-control-label" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <label>Birthday</label>
      <div class="w-100">
	<%= f.date_select :birthdate, { :start_year => 2004, :end_year => 2017, :prompt => { day: 'Day', month: 'Month', year: 'Year' }, :use_short_month => true, :order => [:day, :month, :year]}, class: "custom-select col-sm-3" %>
	</div>
    </div>

    <div class="col-md-6 mb-3">
      <label class="">Last Grade Completed</label>
      <%= f.select :last_grade_id, grade_types.map.with_index{ |s, i| [s, i]}, {}, {class: "custom-select"}  %>
    </div>
  </div>

  <div class="mb-3">
    <label class="">Class Buddy</label>
    <%= f.text_field :buddy_request, class: "form-control" %>
    <small class="form-text text-muted">If you would like your child to be in a class with a specific friend please give their name and we will make every effort to place them together.</small>
  </div>

  <div class=" mb-3">
      <div class="custom-control custom-checkbox">
	<%= f.check_box :church_member, class: "custom-control-input" %>
	<%= f.label :church_member, "Regular attendee", class: "custom-control-label"%>
      </div>
  </div>

  <div class="mb-3">
    <label class="">Invited By</label>
    <%= f.text_field :invited_by, class: "form-control"%>
      <small class="text-muted">If you were invited by a member of Brushy Creek please give their name.</small>
  </div>

  <div class="mb-3">
    <div class="custom-control custom-checkbox">
	<%= f.check_box :can_photograph, class: "custom-control-input"%>
	<%= f.label :can_photograph, "Can be photographed", class: "custom-control-label" %>
	<small class="form-text text-muted">Is your child allowed to be inclueded in photographs or videos relating to VBS.</small>
    </div>
  </div>

  <div class="mb-3">
    <div class="custom-control custom-checkbox">
      <%= f.check_box :allergies, class: "custom-control-input" %>
      <%= f.label :allergies, "Allerigies", class: "custom-control-label" %>
    </div>
    <%= f.text_area :allergies_notes, placeholder: "Alergies, Epipen, etc.",  class: "form-control"%>
  </div>

  <div class="mb-3">
    <div class="custom-control custom-checkbox">
      <%= f.check_box :medical_issues, class: "custom-control-input" %>
      <%= f.label :medical_issues, "Other Medical Issues", class: "custom-control-label" %>
    </div>
    <%= f.text_area :medical_issues_notes, placeholder: "Bloody Noses, etc.",  class: "form-control"%>
  </div>

  <div class=" mb-3">
    <div class="custom-control custom-checkbox">
      <%= f.check_box :special_circumstance, class: "custom-control-input" %>
      <%= f.label :special_circumstance, "Any other circumstances that we should we be aware of?", class: "custom-control-label"%>
      <small class="form-text text-muted">We will get in touch before VBS to discus this with you.</small>    
    </div>
  </div>

  <% if admin == 1 %>
    <%= render partial: "kids/kid_form_admin", locals: {f: f} %>
  <% end %>
</div>
