<% content_for :title do %>
  Kid - <%= @kid.first_name %> <%= @kid.last_name %>
<% end %>

<br>
<div class="container w-75">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
	<div class="card-header">
	  <nav class="nav nav-pills card-header-pills">
	    <a class="nav-link active" href="<%= edit_kid_path(@kid.id) %>">Edit</a>
	    <% if @kid.group_id %>	
	      <%= link_to "View Class", groups_path(anchor: "group-#{@kid.group_id}"), class: "nav-link"  %>
	      <% end %>
	      <a class="nav-link" href="#">Locate</a>
	      <%= link_to "Delete", @kid, method: :delete, class: "nav-link", data: {confirm: "Are you sure?" } %>
	  </nav>
	</div>
	<div class="card-body">
	  <h1 class="card-title"><%= @kid.first_name %> <%= @kid.last_name %></h1>
	  <h5 class="text-muted"><%=find_age(@kid.birthdate) %> years old | <%= @kid.gender %>
	    <% if !@kid.can_photograph %>
	      <span class="fa-stack">
		<i class="fa fa-camera fa-stack-1x"></i>
		<i class="fa fa-ban fa-stack-2x text-danger"></i>
	      </span>
	    <% end %>
	  </h5>
	  <hr>
	  <div class="row">
	    <div class="col-sm-5 text-right">
	      <h5>Birthday:</h5>
	    </div>
	    <div class="col-4"> 
	      <p><%= pretty_print_date(@kid.birthdate) %></p>
	    </div>
	  </div>

	  <div class="row">
	    <div class="col-sm-5 text-right">
	      <h5>Last Completed Grade:</h5>
	    </div>
	    <div class="col-4">
	      <p><%= @kid.grade  %></p>
	    </div>
	  </div>
	  <% if @kid.group_id %>
	    <div class="row">
	      <div class="col-sm-5 text-right">
		<h5>Class:</h5>
	      </div>
	      <div class="col-4">
		<p><%= @kid.group.name_grade  %></p>
	      </div>
	    </div>
	  <% end %>
	  <% unless @kid.buddy_request.empty? %>
	    <div class="row">
	      <div class="col-sm-5 text-right">
		<h5>Friend Request:</h5>
	      </div>
	      <div class="col-4">
		<p><%= @kid.buddy_request  %></p>
	      </div>
	    </div>
	  <% end %>
	  <div class="row">
	    <div class="col-sm-5 text-right">
	      <h5>Regular Attendee:</h5>
	    </div>
	    <div class="col-4">
	      <p><%= @kid.church_member ? "Yes" : "No"  %></p>
	    </div>
	  </div>
	  <% if !@kid.church_member %>
	    <div class="row">
	      <div class="col-sm-5 text-right">
		<h5>Invited By:</h5>
	      </div>
	      <div class="col-4">
		<p><%= @kid.invited_by %></p>
	      </div>
	    </div>
	  <% end %>

	  <% if @kid.allergies %>
	    <div class="row">
	      <div class="col-sm-5 text-right">
		<h5>Allergies:</h5>
	      </div>
	      <div class="col-4">
		<p><%= @kid.allergies_notes %></p>
	      </div>
	    </div>
	  <% end %>
	  <% if @kid.medical_issues %>
	    <div class="row">
	      <div class="col-sm-5 text-right">
		<h5>Medical Issues:</h5>
	      </div>
	      <div class="col-4">
		<p><%= @kid.medical_issues_notes %></p>
	      </div>
	    </div>
	  <% end %>

	  <% unless @kid.notes == nil %>
	    <div class="row">
	      <div class="col-sm-2 offset-sm-2">
		<h4>Notes</h4>
	      </div>
	    </div>
	    <div class="row">
	      <div class="col-sm-6 offset-sm-2">
		<p><%= @kid.notes %></p>
	      </div>
	    </div>
	  <% end %>
	</div>
	<div class="card-footer">
	  <small class="text-muted">Last Updated <%= @kid.updated_at.to_time.strftime('%B %e %Y at %l:%M %p') %></small>
	</div>
      </div>
    </div>
    <div class="col-md-4"> <!-- @kid familly -->
      <div class="row">
	<h3> <%= @kid.family.head.full_name %> </h3>
      </div>
      <div class="row">
	
      </div>
    </div>
  </div>
</div>


