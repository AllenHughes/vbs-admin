<% content_for :title do %>
Kids Inbox
<% end %>

<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
	<button type="button" class="btn btn-secondary btn-lg btn-block">New In-Person Registration</button>
	<small class="text-muted"> This is for begining a new f2f registration.</small>
      </div>
      <div class="col-md-4">
	<button type="button" class="btn btn-secondary btn-lg btn-block">Copy Previous Regestration</button>
	<small class="text-muted">This will allow you to begin a new f2f registration with
	some of the information pre-filled. This is useful for siblings.</small>
      </div>
    </div>
  </div>
</div>

<div class="container">
  
  <div class="row justify-content-center">
    <div class="col">
      <h1>Registrations</h1>
    </div>
    <div class="col">
      <div class="input-group align-middle">
	<input type="text" class="form-control" placeholder="Search for...">
	<span class="input-group-btn">
          <button class="btn btn-secondary" type="button">Go!</button>
	</span>
      </div>
     </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-12">
      <table class="table table-sm table-hover">
	<thead>
	  <tr>
	    <th>Name</th>
	    <th>Age</th>
	    <th>Grade</th>
	    <th>Notes</th> <!-- this is for the notes icon which will have a pop over on hover -->
	    <th>Medical</th> <!-- this is for themeidal alerts icons -->
	  </tr>
	</thead>
	<tbody>
	  <% @kids.sort_by_last_name.each do |kid| %>
	  <tr onclick="window.location='<%= kid_path(kid)%>';" style='cursor: pointer;'>
	    <td><%= kid.first_name + " " + kid.last_name%></td>
	    <td><%= find_age(kid.birthdate) %></td>
	    <td>4</td>
	    <td></td>
	    <% if kid.allergies %>
	    <td>
	      <span class="badge badge-warning">Allergies</span>
	      <span class="badge badge-info">Other</span>
	    </td>
	    <% else %>
	    <td>Nope</td>
	    <% end %>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
  
</div>
