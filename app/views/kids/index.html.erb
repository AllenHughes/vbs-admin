<% content_for :title do %>
Kids Inbox
<% end %>

<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
	<a class="btn btn-secondary btn-lg btn-block" href="<%= new_kid_path %>" >New In-Person Registration</a>
	<small class="text-muted"> This is for begining a new f2f registration.</small>
      </div>
      <div class="col-md-4">
	<a class="btn btn-secondary btn-lg btn-block" href="" >Copy Previous Regestration</a>
	<small class="text-muted">This will allow you to begin a new f2f registration with
	some of the information pre-filled. This is useful for siblings.</small>
      </div>
    </div>
  </div>
</div>

<div class="container">
  
  <div class="row justify-content-center">
    <div class="col">
      <h1>Registrations</h1>
    </div>
    <div class="col">
      <div class="input-group align-middle">
	<input type="text" class="form-control" placeholder="Search for...">
	<span class="input-group-btn">
          <button class="btn btn-secondary" type="button">Search</button>
	</span>
      </div>
     </div>
  </div>
  
  <div class="row justify-content-center mt-4">
    
    <div class="col-lg-12 mb-3 ml-4">
      <a class="btn btn-primary btn-sm" href="<%= new_kid_path %>">Add New</a>
      |
      <div class="btn-group">
	<button class="btn btn-outline-primary btn-sm" type="button">Pre-K</button>
	<button class="btn btn-outline-primary btn-sm" type="button">4K</button>
	<button class="btn btn-outline-primary btn-sm" type="button">5K</button>
	<button class="btn btn-outline-primary btn-sm" type="button">1st</button>
	<button class="btn btn-outline-primary btn-sm" type="button">2nd</button>
	<button class="btn btn-outline-primary btn-sm" type="button">3rd</button>
	<button class="btn btn-outline-primary btn-sm" type="button">4th</button>
	<button class="btn btn-outline-primary btn-sm" type="button">5th</button>
      </div>
      </div>
    <div class="col-xl-12">
      <table class="table table-sm table-hover">
	<thead>
	  <tr>
	    <th></th>
	    <th>Name</th>
	    <th>Age</th>
	    <th>Grade</th> <!-- this will deisplay the grade the kid will be going to next year -->
	    <th>Notes</th> <!-- this is for the notes icon which will have a pop over on hover -->
	    <th>Medical</th> <!-- this is for the meidal alerts icons -->
	  </tr>
	</thead>
	<tbody>
	  <% @kids.sort_by_last_name.each do |kid| %>
	  <tr onclick="window.location='<%= kid_path(kid)%>';" style='cursor: pointer;'>
	    <td></td>
	    <td><%= kid.first_name + " " + kid.last_name%></td>
	    <td><%= find_age(kid.birthdate) %></td>
	    <td><%= current_grade(kid.last_grade_id) %></td>
	    <td></td>
	    <% if kid.allergies %>
	    <td>
	      <span class="badge badge-warning">Allergies</span>
	      <span class="badge badge-info">Other</span>
	    </td>
	    <% else %>
	    <td>Nope</td>
	    <% end %>
	  </tr>
	  <% end %>
	</tbody>
      </table>
    </div>
  </div>
  
</div>
