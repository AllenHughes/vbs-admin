<div class = "container w-75">
    <div class="row justify-content-center">
    <div class="col">
      <h1>Classes</h1>
    </div>
    </div>
  
  <div class="row justify-content-center mt-4">
    
    <div class="col-lg-12 mb-3 ml-4">
      <a class="btn btn-primary btn-sm" href="<%= new_group_path %>">Add New</a>
    </div>
  </div>
<br>
  <% grade_types.each_with_index do | grade, index | %>
      <div class = "row">
	<h2 class = "col-md-3"><%= grade %></h2>
	<h5 class = "col-md-3">Edit</h5>
      </div>
      <div class="card-group">
	<% @groups.where("grade_id = ?", index).each do | group | %>
	<div id=<%=group.id %> class="card">
	  <div class="card-block">
	    <h4 class="card-title"><%= group.name %></h4>
	    <table class="table table-sm">
	      <tbody>
		<% group.kids.each do |kid| %>
		<tr>
		  <td><%= "#{kid.first_name} #{kid.last_name}" %></td>
		  <td><%= find_age(kid.birthdate) %></td>
		</tr>
		<% end %>
	      </tbody>
	    </table>
	 
	    <%= link_to "Edit", edit_group_path(group), class: "btn btn-primary" %>
	  </div>
	</div>
	<% end %>
      </div>	
      <% end %>
</div>
  
