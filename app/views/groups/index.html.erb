<div class = "container w-75">
    <div class="row justify-content-center">
      <div class="col">
	<h1>Classes</h1>
      </div>
    </div>
    
    <div class="row justify-content-center mt-4">
      <div class="col-lg-12 mb-3 ml-4">
	<a class="btn btn-primary btn-sm" href="<%= new_group_path %>">Add New</a>
      </div>
    </div>
    <br>
    <% grade_types.each_with_index do | grade, index | %>
    <div
    <div class = "row mt-4">
      <h2 class = "col-md-3"><%= grade %></h2>
    </div>
    <div class="row pt-4  bg-faded rounded">
      <% @groups.where("grade_id = ?", index).each do | group | %>
      <div class="col-xl-4">
	<div id=<%=group.id %> class="card mb-4">
	  <div class="card-block">
	    <h4 class="card-title"><%= group.name %></h4>
	    <p>Teacher Name Teacher Name2</p>
	  </div>
	  <table class="table table-sm table-hover">
	    <tbody>
	      <% group.kids.each do |kid| %>
	      <tr onclick="window.location='<%= kid_path(kid)%>';" style='cursor: pointer;'>
		<td><%= "#{kid.first_name} #{kid.last_name}" %></td>
		<td><%#= find_age(kid.birthdate) %></td>
		<td>
		  <% if kid.allergies %>
		  <span class="badge badge-warning">Allergies</span>
		  <% end %>
		  <% if kid.medical_issues %>
		  <span class="badge badge-info">Other</span>
		  <% else %>
		  <% end %>
		</td>
	      </tr>
	      <% end %>
	    </tbody>
	  </table>
	  <div class="card-footer">
	    <%= link_to "Edit", edit_group_path(group), class: "btn btn-sm btn-primary" %>
	  </div>
	</div>
      </div>
      <% end %>
    </div>	
    <% end %>
</div>
  
