<% content_for :title do %>
  New Registration
<% end %>

<body class="bg-light">
  <div class="container py-5">
    <h1>Register Your Family </h1>
    <%= render partial: "shared/errors", locals: {object: @family} %>
    <%= form_for @family, url: {action: 'confirm'}  do |f| %>
      
    <%= render partial: "pub_family_form", locals: {fam: @family, f: f, admin: 0} %>
    <div id="kids"class="bg-white border p-3">
      <%= f.fields_for :kids do |ff| %>
      <%= render partial: "kids/kid_form", locals: {f:ff, form_name: ff.object_name, admin: 0, deleteable: 0} %>    <% end %>
    </div>
    <%= add_form_template(f, @family.kids.build, "kids/register_another_kid", "kid_form_template") %>
    <br>
    <%= add_object_button("Add another child", "kid_form_template", "kids") %>
    <%= f.submit "Complete registration", data: {"diable-with":"Saving..."}, class: "btn btn-primary" %>    
    <% end %>
  </div>
</body>

