<fieldset>
  <%= f.fields_for :guardians do |ff| %>
    <% if ff.object.is_head == true %>
      <hr>
      <h3>Your Contact Info</h3>
      <hr>
      <div class="form-group row">
	<label class="col-sm-3 text-sm-right col-form-label">Name</label>
	<div class="col-sm-4">
	  <%= ff.text_field :first_name, class: "form-control" %>
	  <small class="form-text text-muted">First</small>
	</div>
	<div class="col-sm-4">
	  <%= ff.text_field :last_name, class: "form-control" %>
	  <small class="form-text text-muted">Last</small>
	</div>
      </div>
      <div class="form-group row">
	<label class="col-sm-3 text-sm-right col-form-label">Phone</label>
	<div class="col-sm-4">
	  <%= ff.text_field :phone, class: "form-control" %>
	</div>
      </div>
	<%= ff.text_field :address, :placeholder => "Address" %>
	<%= ff.text_field :city, :placeholder => "City" %>
	<%= ff.text_field :state , :placeholder => "State" %>
	<%= ff.text_field :zipcode , :placeholder => "zipcode" %>
	<%= ff.hidden_field :is_head, :value => true %>
	<hr>
	<h4>Pickup/Emergency Contacts</h4>
	<p>Additonal people we can contact in an emergency. They are also authorized to sign your child out.</p>
      <% else %>
	      <div class="form-group row">
	<label class="col-sm-3 text-sm-right col-form-label">Contact Name</label>
	<div class="col-sm-4">
	  <%= ff.text_field :first_name, class: "form-control" %>
	  <small class="form-text text-muted">First</small>
	</div>
	<div class="col-sm-4">
	  <%= ff.text_field :last_name, class: "form-control" %>
	  <small class="form-text text-muted">Last</small>
	</div>
      </div>
      <div class="form-group row">
	<label class="col-sm-3 text-sm-right col-form-label">Phone</label>
	<div class="col-sm-4">
	  <%= ff.text_field :phone, class: "form-control" %>
	</div>
      </div>
      <hr>
      <% end %>
  <% end %>
  
</fieldset>
