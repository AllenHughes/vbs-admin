<% if i.even? %>
  <% rowbg = 'bg-light' %>
<% else %>
  <% rowbg = '' %>
<% end %>

<div class="<%= rowbg %> py-3 border-bottom">
  <div class="float-right pr-3">
    <% if f.kids.first %>
      <a class="btn btn-primary btn-sm align-middle" href="<%= kid_path(f.kids.first.id) %>">View</a>
    <% end %>
  </div>
  <div class="row">
    
    <div class="col-xl-4 col-lg-4 col-sm-12 row mr-3">  
      <div class="col-xl-6 col-md-6 col">
	<strong class="my-1"><i class="fas fa-angle-double-right pr-1 text-success"></i><%= f.head.full_name %></strong>
	<p>
	  <%= f.head.phone %>
	</p>
      </div>
      
      <div class="col">
	<% f.guardians.each do |g| %>
	  <% unless g.head? %>
	    <p>
	      <strong><%= g.full_name %></strong>
	    </p>
	  <% end %>
	<% end %>
      </div>   
    </div>
    
    <div class="col row border-left border-secondary">
      <% if f.kids %>
	<% f.kids.each do |k| %>
	  <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6">
	    <strong><%= k.full_name %></strong> 
	    <p>
	      Age: <%= k.age %>
	    </p>
	  </div>
	<% end %>
      <% end %>
    </div>
  </div>
  
</div>
