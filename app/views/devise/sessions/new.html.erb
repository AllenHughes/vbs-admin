
<h4 class="card-header">Log in</h4>
<div class="card-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="form-group row">
  <label class="col-md-5 text-sm-right col-form-label">Email</label>
  <div class="col">
    <%= f.email_field :email, autofocus: true,class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <label class="col-md-5 text-sm-right col-form-label">Password</label>
  <div class="col">
    <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
  </div>
</div>

<% if devise_mapping.rememberable? -%>
<div class="form-group row">
  <div class="form-check offset-6">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <label class="form-check-label" for="user_remember_me">Remeber Me</label>
  </div>
</div>
</div>
<% end %>

<div class="row">
  <div class="col-sm-9 offset-5">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
</div>
<% end %>
<div class="row">
  <div class="col offset-3">
    <%= render "devise/shared/links" %>
  </div>
</div>


